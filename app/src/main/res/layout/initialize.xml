<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cool"
    android:id="@+id/initialize_layout"
    >
    <Spinner
        android:id="@+id/menuspinnerinitialize"
        android:layout_width="131dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/baloo"
        android:text="Menu"
        android:textSize="25dp"
         />
    <TextView
        android:id="@+id/yourphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:layout_gravity="center"
        android:text="@string/yourphotoEnglish"
        android:textColor="@color/white"
        android:textSize="40dp"
         />
    <ImageView
        android:id="@+id/calendarimageview"
        android:layout_width="350dp"
        android:layout_height="435dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout android:id="@+id/button_layout" android:orientation="horizontal"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
    <Button
        android:id="@+id/takephotobutton"
        android:layout_width="150dp"
        android:layout_height="72dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="@string/takephotoEnglish"
        />

    <Button
        android:id="@+id/choosephotobutton"
        android:layout_width="150dp"
        android:layout_height="72dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="@string/choosePhotoEnglish"
        />

    </LinearLayout>

    <Button
        android:id="@+id/initializeschedulebutton"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="72dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/baloo"
        android:text="@string/initializecalendarEnglish"
        android:textSize="25dp"
        android:textColor="@color/black"/>
</LinearLayout>